<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Cheapest Instagram Growth</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <!-- Favicons -->
    <link href="img/favicon.png" rel="icon">
    <link href="img/apple-touch-icon.png" rel="apple-touch-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700|Open+Sans:300,300i,400,400i,700,700i" rel="stylesheet">
    <!-- Bootstrap CSS File -->
    <link href="lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Libraries CSS Files -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="lib/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link href="lib/magnific-popup/magnific-popup.css" rel="stylesheet">
    <!-- Main Stylesheet File -->
    <link href="css/style-side.css" rel="stylesheet">
  </head>

  <div id="wrapper">

    <div id="header">
      <div class="container">
        <% include partials/header-main.ejs %>
      </div>
    </div>

    <div id="body">
      <div class="section-bg">
        <div class="section-header">
          <h3 class="section-title">CIG Registration</h3>
          <span class="section-divider"></span>
          <p class="section-description">Register for a new CIG account in one simple step. Note that this is not your Instagram login</p>
          <div class='row-center'>
            <div class='column-center'>
              <div>
                <% if (locals.message) { %>
                  <p style="color:red;"><b><%= locals.message %></b></p>
                <% } %>
                <form action="/registerAccount" method="post" role="form">
                  <div class="form-row">
                    <div class="form-group">
                      <p><b>Email Address&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</b></p>
                    </div>
                    <div class="form-group col-lg-6">
                      <input type="text" class="form-control" name="email" id="email" placeholder="Your Email"/>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group">
                      <p><b>Password&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</b></p>
                    </div>
                    <div class="form-group col-lg-6">
                      <input type="password" class="form-control" name="password1" id="password1" placeholder="Your Password"/>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group">
                      <p><b>Confirm Password&nbsp;&nbsp;</b></p>
                    </div>
                    <div class="form-group col-lg-6">
                      <input type="password" class="form-control" name="password2" id="password2" placeholder="Confirm Password"/>
                    </div>
                  </div>
                  <div style="padding-left:25%;"><button class="btn btn-warning" type="submit">Register!</button></div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">
          <% include partials/footer.ejs %>
        </div>
      </div>
    </div>

  </div>

  <!-- JavaScript Libraries -->
  <script src="lib/jquery/jquery.min.js"></script>
  <script src="lib/jquery/jquery-migrate.min.js"></script>
  <script src="lib/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="lib/easing/easing.min.js"></script>
  <script src="lib/wow/wow.min.js"></script>
  <script src="lib/superfish/hoverIntent.js"></script>
  <script src="lib/superfish/superfish.min.js"></script>
  <script src="lib/magnific-popup/magnific-popup.min.js"></script>
  <!-- Contact Form JavaScript File -->
  <script src="contactform/contactform.js"></script>
  <!-- Template Main Javascript File -->
  <script src="js/main.js"></script>
</html>